{
  "buildCommand": "npm install && npx prisma generate && npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30,
      "includeFiles": "node_modules/.prisma/client/**"
    }
  }
}
